---
layout: compress
swcache: true
---

[
  {% for post in site.posts %}
  {
    "title": {{ post.title | jsonify }},
    "url": {{ post.url | relative_url | jsonify }},
    "categories": {{ post.categories | join: ', ' | jsonify }},
    "tags": {{ post.tags | join: ', ' | jsonify }},
    "date": "{{ post.date }}",
    {% include no-linenos.html content=post.content %}
    {% assign _content = content | markdownify | strip_html %}
    {% assign _lines = _content | split: '\n' %}
    {% assign _excerpt_lines = _lines | slice: 0, 200 %}
    {% assign _excerpt = _excerpt_lines | join: ' ' | strip_newlines %}
    "snippet": {{ _excerpt | truncate: 200 | prepend: '__snippet__' | jsonify }},
    "content": {{ _excerpt | jsonify }}
  }{% unless forloop.last %},{% endunless %}
  {% endfor %}
]
